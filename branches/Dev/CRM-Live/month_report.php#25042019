if($filterStatusId != ''){
    $selectedStatus = explode(",",$filterStatusId);
    $misCondition .= " AND (sm.status_id in ($filterStatusId))";
    $statusCondition .= " AND (status_id in ($filterStatusId))";
}

if($filterYear != ''){
    $selectedYear = explode(",",$filterYear);
    $misCondition .= " AND (DATE_FORMAT(t.created_at, '%Y') in ($filterYear))";
}

if($filterMonth != ''){
    $selectedMonth = explode(",",$filterMonth);
    $misCondition .= " AND (DATE_FORMAT(t.created_at, '%m') in ($filterMonth))";
}

$mainTable = array("tickets as t",array("count(*) as number","DATE_FORMAT(t.created_at, '%b-%y') as month"));
$joinTable = array(
    array("left","status_master as sm","sm.status_id = t.status_id",array("sm.status_name as status")),
);
$misDisRes = $db->JoinFetch($mainTable,$joinTable,$misCondition,array("YEAR(t.created_at)"=>"asc","MONTH(t.created_at)"=>"asc"),null,"MONTH(t.created_at), YEAR(t.created_at), t.status_id");
$misData = $db->FetchToArrayFromResultset($misDisRes);
$monthFormatData = array();


foreach($misData as $key => $value){
    $totalCount = $totalCount + $value['number'];
    $monthFormatData[$value['month']]['report_data'] = $value;
    $monthFormatData[$value['month']][$value['status']] = $value['number'];
    unset($monthFormatData[$value['month']]['report_data']);
}

$statusData = $db->FetchToArray("status_master",array("status_name"),$statusCondition,array("sort_order"=>"asc"));

